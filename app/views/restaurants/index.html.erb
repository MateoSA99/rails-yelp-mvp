<div class= "m-3">
<h1 class="text-center">Our Restaurants</h1>
<table class="table table-success">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @restaurants.each do |restaurant| %>
        <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
        <td><%= restaurant.phone_number %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-primary" %>

</div>
